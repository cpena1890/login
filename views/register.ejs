<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nuevo Usuario</title>
    <link rel="stylesheet" href="./resources/css/styles.css" type="text/css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous"/>

</head>
<body>
    <!--GENERAL-->
    <div class="container-xl m-0 registro">
        <div class="centro">            
            <div class="loginDerecha">
                     <form class="p-3 m-2 d-flex flex-column justify-content-center" method="post" action="/register">                        
                        <h4>Nuevo usuario</h4>                    
                        <div class="form-floating-sm p-1">
                            <input type="text" class="form-control" name ="user" id="user" placeholder="Usuario">                                                    
                        </div>
                        
                        <div class="form-floating-sm p-1">
                            <input type="text" class="form-control" name ="userName" id="userName" placeholder="Nombre completo">                                                    
                        </div>

                                                <div class="form-floating-sm p-1 d-flex align-items-center">  
                            <label for="rol" class="p-1 m-1">Rol</label>
                            <select name="rol" id="rol" class="form-select p-1">
                                <option value="Admin">Admin</option>                                
                                <option value="Basico">Basico</option>                                
                                <option value="Chofer">Chofer</option>
                            </select>
                        </div>

                        <div class="form-floating-sm p-1">
                          <input type="password" class="form-control" name ="userPassword" id="userPassword" placeholder="Contraseña">                       
                        </div>

                        <div class="container d-flex m-1 p-1">
                            <button class="w-50 p-1 m-1 btn btn-sm btn-primary" type="submit">Aceptar</button>
                            <a type="button" href="/" class="w-50 p-1 m-1 btn btn-sm btn-outline-primary p-1" >Cancelar</a>
                        </div>
                        
                        <p class="mt-3 mb-1 text-muted">&copy; Carlos Peña - 2022</p>
                        
                      </form>

            </div>

            </div>

        </div>
    </div>
    
</body>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
 
    <!--SweetAlert-->
    <% if(typeof alert != "undefined"){%>
        <script>
            Swal.fire({
                title:'<%= alertTitle %>',
                text:'<%= alertMessage %>',
                icon:'<%= alertIcon %>',
                showConfirmButton:'<%= showConfirmBurron %>',
                timer:'<%= timer %>'
            }).then(()=>{
                window.location='/ <%=ruta%>'

            })
        </script>
    <%}%>    
</html>